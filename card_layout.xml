<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    app:cardBackgroundColor="@color/bottom_navigation_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      
        <TextView
            android:id="@+id/scanner_name"
            style="@style/MyMonospaceFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Defender"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
        <View
            android:id="@+id/white_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/scanner_name"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF" />
      
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/status_text"
                style="@style/MyMonospaceFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:textColor="#4CAF50"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_text"
                style="@style/MyMonospaceFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_scans"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/positives_text"
                style="@style/MyMonospaceFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/threat"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/percent_text"
                style="@style/MyMonospaceFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
